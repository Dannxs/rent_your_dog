<h1>Dogs in your area</h1>
  <div class="row">
    <div class="col-8 cards-container">
      <% @dogs.each do |dog| %>
        <%= link_to dog_path(dog), class:"card-dog" do %>
            <img src="https://source.unsplash.com/user/adventure_yuki" />
            <div class="card-dog-infos">
              <div>
                <h2><%= dog.name %></h2>
                <p><%= dog.description %></p>
              </div>
              <h2 class="card-dog-rating"><%= dog.rating %>/5</h2>
            </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>